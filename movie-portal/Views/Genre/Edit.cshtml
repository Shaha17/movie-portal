@model movie_portal.Models.Media.GenreDTO
@{
	ViewData["Title"] = "Изменение жанра";
}

<div class="card">
	<div class="card-header">
		<div class="card-title">
			@ViewData["Title"]
		</div>
	</div>
	<div class="card-body">
		<form asp-action="Create" asp-controller="Genre" method="post" enctype="multipart/form-data">
			<div asp-validation-summary="All"></div>
			<input type="hidden" asp-for="Id" />
			<div class="form-group">
				<label asp-for="Name">
				</label><input asp-for="Name" class="form-control">
			</div>
			<button type="submit" class="btn btn-primary">Добавить</button>
		</form>
	</div>
</div>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}