@model movie_portal.Models.Account.UserDTO

@{
    ViewData["Title"] = "Изменение данных";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <span class="card-title">
                    Изменение данных
                </span>
            </div>
            <div class="card-body">
                <form action="Register" method="post">
                    <input asp-for="Id" type="hidden" class="col-md-4 form-control" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <label asp-for="UserName" class="col-md-4"></label>
                        <input asp-for="UserName" class="col-md-6 form-control" />
                        <span asp-validation-for="UserName" />
                    </div>
                    <div class="form-group row">
                        <label asp-for="PhoneNumber" class="col-md-4"></label>
                        <input asp-for="PhoneNumber" class="col-md-6 form-control" />
                        <span asp-validation-for="PhoneNumber" />
                    </div>
                    <div class="form-group row">
                        <label asp-for="Email" class="col-md-4"></label>
                        <input asp-for="Email" class="col-md-6 form-control" />
                        <span asp-validation-for="Email" />
                    </div>
                    <div class="form-group row">
                        <label asp-for="Password" class="col-md-4"></label>
                        <input type="password" placeholder="Оставьте пустым, чтобы не менять" asp-for="Password"
                            class="col-md-6 form-control" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div class="form-group row">
                        <label asp-for="ConfirmPassword" class="col-md-4"></label>
                        <input type="password" placeholder="Оставьте пустым, чтобы не менять" asp-for="ConfirmPassword"
                            class="col-md-6 form-control" />
                        <span asp-validation-for="ConfirmPassword" />
                    </div>
                    <div class="form-group row">
                        <label asp-for="NewPassword" class="col-md-4"></label>
                        <input type="password" placeholder="Оставьте пустым, чтобы не менять" asp-for="NewPassword"
                            class="col-md-6 form-control" />
                        <span asp-validation-for="NewPassword" />
                    </div>
                    <div class="form-group row">
                        <div class="col-md">
                            <input type="submit" value="Сохранить" class="btn btn-success" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>